<h1><%= @story.title %></h1>
<p><%= @story.description %></p>

<p><%= link_to "Edit", edit_story_path(@story), class: "edit" %></p>
<p><%= link_to "Delete", story_path(@story),
  method: :delete,
  confirm: "Are you sure?",
  class: "delete" %></p>


<h3><%= pluralize @story.votes.size, 'vote' %></h3>
<p><%= link_to "Add a vote",
            story_votes_path(@story),
            method: :post %></p>

<h3><%= pluralize @story.comments.size, 'comment' %></h3>

<% @story.comments.each do |comment| %>
  <div class="comment">
    <%= simple_format comment.body %>
    <p><%= time_ago_in_words comment.created_at %> ago</p>
  </div>
<% end %>


<p><%= link_to "Add a comment", new_story_comment_path(@story) %></p>
